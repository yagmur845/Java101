package Pratik;
import java.util.Scanner;
public class basamkasayitoplam {
    public static void main(String[] args) {
        Scanner i =new Scanner(System.in);
        System.out.println("SayÄ±:");
        int s=i.nextInt();
        int a=0;

        while(s!=0){
            a+=s%10;
            s/=10;
        }
        System.out.println(a);
    }
}
